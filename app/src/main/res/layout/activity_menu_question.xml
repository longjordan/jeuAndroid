<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".controller.MenuQuestionActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
         >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/layoutContainer"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:orientation="horizontal">

                <RelativeLayout
                    android:layout_width="0dip"
                    android:layout_height="match_parent"
                    android:layout_weight="0.01">

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="0dip"
                    android:layout_height="match_parent"
                    android:layout_weight="0.98">

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"

                        android:orientation="vertical"
                        tools:layout_editor_absoluteX="8dp"
                        tools:layout_editor_absoluteY="8dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <Button
                                android:id="@+id/q1"
                                android:layout_width="wrap_content"
                                android:layout_height="150dp"
                                android:layout_weight="1"
                                android:text="Affiche1" />

                            <Button
                                android:id="@+id/q2"
                                android:layout_width="wrap_content"
                                android:layout_height="150dp"
                                android:layout_weight="1"
                                android:text="Affiche2" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal">

                            <Button
                                android:id="@+id/q3"
                                android:layout_width="wrap_content"
                                android:layout_height="150dp"
                                android:layout_weight="1"
                                android:text="Affiche3" />

                            <Button
                                android:id="@+id/q4"
                                android:layout_width="wrap_content"
                                android:layout_height="150dp"
                                android:layout_weight="1"
                                android:text="Affiche4" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal">

                            <Button
                                android:id="@+id/q5"
                                android:layout_width="wrap_content"
                                android:layout_height="150dp"
                                android:layout_weight="1"
                                android:text="Affiche5" />

                            <Button
                                android:id="@+id/q6"
                                android:layout_width="wrap_content"
                                android:layout_height="150dp"
                                android:layout_weight="1"
                                android:text="Affiche6" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal">

                            <Button
                                android:id="@+id/q7"
                                android:layout_width="wrap_content"
                                android:layout_height="150dp"
                                android:layout_weight="1"
                                android:text="Affiche7" />

                            <Button
                                android:id="@+id/q8"
                                android:layout_width="wrap_content"
                                android:layout_height="150dp"
                                android:layout_weight="1"
                                android:text="Affiche8" />
                        </LinearLayout>

                    </LinearLayout>
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="0dip"
                    android:layout_height="match_parent"
                    android:layout_weight="0.01">

                </RelativeLayout>

            </LinearLayout>

        </LinearLayout>

    </ScrollView>



</android.support.constraint.ConstraintLayout>